{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "never"],
        "react/prefer-stateless-function": [2, { "ignorePureComponents": true }],
        "jsx-a11y/control-has-associated-label": "off",
        "jsx-a11y/anchor-has-content": "off",
        "react/require-default-props": "off"
    }
}